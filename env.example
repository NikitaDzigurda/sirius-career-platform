# Основные настройки приложения
APP_NAME="Sirius Career Platform"
APP_VERSION="0.1.0"
DEBUG=true

# Настройки сервера
HOST=0.0.0.0
PORT=8000

# Настройки базы данных
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/sirius_career
DATABASE_ECHO=false

# Настройки безопасности
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки OTP
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# Настройки email (для будущего использования)
SMTP_SERVER=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=

